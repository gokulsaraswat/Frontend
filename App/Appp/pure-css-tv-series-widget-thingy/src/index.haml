.container
  .container_inner
    .container_inner__list
      - @show.each do |series|
        .list_item
          %input{:type => 'radio',:id => "movie-#{series[:name]}",:name => 'movie',:checked => 'checked'}
          %label{:for => "movie-#{series[:name]}"}
            .icon.ion-ios-videocam
            %span #{series[:name]}
            .list_item__placeholder
            .list_item__image
            .list_item__bg
            %section.list_item__feature
              %img.gif{:src => "#{series[:gif]}"}
              .gif_overlay
              .information
                %h1 #{series[:name]}
                %h2 #{series[:episode]} episodes
                .stars 
                  -(1..5).each do
                    .ion-android-star
              .description
                %p #{series[:description]}
              .watch
